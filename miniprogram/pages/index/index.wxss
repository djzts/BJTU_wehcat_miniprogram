/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

page{
  background-color: #f5f5f5;
}

container{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.doc-container{
  overflow: hidden;
  min-height: 100vh;
  box-sizing: border-box;
}

.doc-title{
  position: relative;
  margin: 10px 15px;
  line-height: 25px;
  font-size: 25px;
  color: #666;
}

.list{
  margin: 10px;
  border: 1px solid #d8d8d8;
  border-radius: 5px;
  background-color: #fff;
  padding: 10px;
  box-shadow: 0px 2px 5px #efefef;
}

.list_preinfo{
  color: #f1111e;
  font-size: 11px;
}

.list_title{
  color: #545454;
  padding-top: 3px;
  padding-bottom: 3px;
  display: block;
  font-size: 15px;
  font-weight:bold;  
}

.list_tag{
  display: inline;
  padding: 0.1em 0.3em 0.1em 0.3em;
  margin-right: 3px;
  font-size: 11px;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius:  0.25em;
  color: #626262;
  font-weight: normal; 
}
